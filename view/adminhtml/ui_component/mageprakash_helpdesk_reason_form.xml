<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">mageprakash_helpdesk_reason_form.reason_form_data_source</item>
		</item>
		<item name="label" translate="true" xsi:type="string">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button class="MagePrakash\Helpdesk\Block\Adminhtml\Reason\Edit\BackButton" name="back"/>
			<button class="MagePrakash\Helpdesk\Block\Adminhtml\Reason\Edit\DeleteButton" name="delete"/>
			<button class="MagePrakash\Helpdesk\Block\Adminhtml\Reason\Edit\SaveButton" name="save"/>
			<button class="MagePrakash\Helpdesk\Block\Adminhtml\Reason\Edit\SaveAndContinueButton" name="save_and_continue"/>
		</buttons>
		<namespace>mageprakash_helpdesk_reason_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>mageprakash_helpdesk_reason_form.reason_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="reason_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider class="MagePrakash\Helpdesk\Model\Reason\DataProvider" name="reason_form_data_source">
			<settings>
				<requestFieldName>reason_id</requestFieldName>
				<primaryFieldName>reason_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<field formElement="textarea" name="name" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">reason</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">name</label>
				<dataScope>name</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="status" sortOrder="20">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">reason</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">status</label>
				<dataScope>status</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="sort_order" sortOrder="30">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">reason</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">sort_order</label>
				<dataScope>sort_order</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
	</fieldset>
</form>
